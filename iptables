# For capturing OUTPUT packets in NFQUEUE queue 0
sudo iptables -t filter -A OUTPUT -j NFQUEUE --queue-num 0
# For capturing INPUT packets in NFQUEUE queue 1
sudo iptables -t filter -A INPUT -j NFQUEUE --queue-num 0

# Para montar un servidor escuchando en el puerto 2222
nc -l -p 2222

# Para conectarse al servidor anterior
nc localhost 2222

# Stop capturing OUTPUT packets in NFQUEUE queue 0
sudo iptables -t filter -A OUTPUT -j NFQUEUE --queue-num 0
# Stop capturing INPUT packets in NFQUEUE queue 1
sudo iptables -t filter -A INPUT -j NFQUEUE --queue-num 0
